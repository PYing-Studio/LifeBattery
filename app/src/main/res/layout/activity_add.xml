<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_clear_white"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/add_tpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:paddingStart="@dimen/login_margin"
            android:paddingEnd="@dimen/login_margin"
            android:layout_alignParentBottom="true"
            android:textColorHint="@color/colorWhite">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/titleEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:hint="请输入任务名"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_done_white"
        android:background="@drawable/ic_done_float"
        android:layout_gravity="end"
        android:elevation="5dp"
        app:elevation="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <EditText
            android:id="@+id/detailEdit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/login_margin"
            android:layout_marginEnd="@dimen/login_margin"
            android:hint="任务描述"
            android:gravity="top"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/login_margin"
            android:src="@drawable/ic_av_timer_black_alpha"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/colorDarkBackground"
            android:text="长期计划"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/add_longPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/login_margin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="@dimen/login_margin"
        android:layout_marginEnd="@dimen/login_margin">

        <EditText
            android:id="@+id/pickerButton1"
            android:inputType="none"
            android:gravity="center"
            android:textIsSelectable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="当前日期"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/colorDarkBackground"
            android:text="  //  "/>

        <EditText
            android:id="@+id/pickerButton2"
            android:inputType="none"
            android:gravity="center"
            android:textIsSelectable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="当前时刻"/>
        
    </LinearLayout>


</LinearLayout>

